Name:		itvencoder
Version:	@VERSION@
Release:	0
Summary:	iTVEncoder real time encoder

Group:		Applications/Multimedia
License:	GPL
URL:		http://www.itv.cn/
Source:	        itvencoder-@VERSION@.tar.gz
BuildRoot:	%(mktemp -ud %{_tmppath}/%{name}-%{version}-%{release}-XXXXXX)

BuildRequires:	gstreamer
Requires:	which pkgconfig

%description
iTVEncoder is a real time encoder based on gstreamer.

%prep
%setup -q


%build
%configure
make %{?_smp_mflags}


%install
rm -rf %{buildroot}
make install DESTDIR=%{buildroot}


%clean
rm -rf %{buildroot}


%files
%defattr(-,root,root,-)
%doc
/etc/itvencoder/channels.d/channel-1.conf.sample
/etc/itvencoder/channels.d/channel-2.conf.sample
/etc/itvencoder/channels.d/channel-3.conf.sample
/etc/itvencoder/itvencoder.conf.sample
/etc/logrotate.d/itvencoder
/etc/supervisord.conf
/usr/bin/itvencoder



%changelog

